<!doctype html>
<html>
<head>
    <title>Santi's Taco Truck</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="profile.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">
        <div class="col-sm-6">
          <h3>Orders in Queue</h3>
          <ul class="orders">
          <% for(var i=0; i<orders.length; i++) {%>
            <li <%= orders[i].completed ? "class=completed" : "class=incomplete" %>>
             <span class="firstName"><%= orders[i].name %></span>
              <span> Order Placed At: <%= orders[i].time %></span>
              <span><%= orders[i].chicken ? orders[i].chicken + " chicken tacos": "" %></span>
              <span><%= orders[i].steak ? orders[i].steak + " steak tacos":""%></span>
              <span><%= orders[i].pork ? orders[i].pork + " pork tacos":""%></span>
              <span><%= orders[i].veggie ? orders[i].veggie + " veggie tacos":""%></span>
              <span><%= orders[i].shrimp ? orders[i].shrimp + " shrimp tacos":"" %></span>
              <span><%= orders[i].fish ? orders[i].fish + " fish tacos":""%></span>
              <span><%= orders[i].onions ? orders[i].onions + " Onions":"" %></span>
              <span><%= orders[i].cilantro ? orders[i].cilantro + " Cilantro":"" %></span>
              <span><%= orders[i].beans ? orders[i].beans + " Beans":""%></span>
              <span><%= orders[i].lime ? orders[i].lime + " Lime":""%></span>
              <span><%= orders[i].salsaRoja ? orders[i].salsaRoja + " Salsa Roja":""%></span>
              <span><%= orders[i].salsaVerde ? orders[i].salsaVerde + " Salsa Verde":""%></span>

              <button <%= orders[i].completed ? "class=hide" : "class=ordersReady" %>>Orders Ready!</button>

              <span class="hidden"><%= orders[i]._id %></span>
      
              <span><i class="fa fa-trash-o" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>

</div>

<script src="main.js"></script>

</body>
</html>
